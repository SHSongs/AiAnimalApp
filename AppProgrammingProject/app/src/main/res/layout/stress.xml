<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="무엇을 알고 싶나요?"
        android:textSize="26dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textColor="#119982"
        android:layout_gravity="center"></TextView>



    <Button
        android:id="@+id/one"
        android:background="@drawable/button2"
        android:text="1. 스트레스 원인"
        android:textColor="#119982"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_margin="5dp"
        android:layout_height="0dp"></Button>

    <!-- http://hs.e-school.or.kr/webzine/vol13/sub05.jsp !-->

    <Button
        android:id="@+id/two"
        android:background="@drawable/button2"
        android:text="2. 현재 내 상태 1"
        android:textColor="#119982"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_margin="5dp"
        android:layout_height="0dp"></Button>

    <!-- https://post.naver.com/viewer/postView.nhn?volumeNo=16261264&memberNo=9270899 !-->

    <Button
        android:id="@+id/three"
        android:background="@drawable/button2"
        android:text="3. 현재 내 상태 2"
        android:textColor="#119982"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_margin="5dp"
        android:layout_height="0dp"></Button>

    <!--https://witapp.co/story/14706213!-->




</LinearLayout>